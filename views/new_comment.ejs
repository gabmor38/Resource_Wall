  <title>Resource Wall New_Comment</title>
</head>

<body>
  <%- include('./partials/_header.ejs') %>
    <div class="container pt-4">
      <h2 class="text-center mx-4 my-4">Leave a comment for this resource.</h2>
      <form action="/api/new_comment/comment" method="POST">
        <div class="form-group my-4">
          <input type="hidden" name="resource_id" value="<%= resource_id %>"></input>
          <h4><label for="message">Comment</label></h4>
          <textarea class="form-control" name="message" placeholder="Share your thoughts."
            rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-plus-square"></i> Comment</button>
      </form>
    </div>
</body>

