  <title>Resource Wall Login</title>
</head>

<body>
  <%- include('./partials/_header.ejs') %>
  <div class="container pt-4">
    <div>
      <h1> Login </h1>
      <% if(error){ %>
        <h3>
          <%= error %>
        </h3>
        <% } %>
    </div>
    <div>
      <form action="/api/users/login" method="POST">
        <label for="email" class="mt-2">Email Address:</label>
          <input type='email' id="email" name="email" placeholder="Enter email" class= "form-control w-25 my-2">

    <div>
      <label for="password" class="mt-2">Password:</label>
        <input type='password' id="password" name="password" placeholder="Password" class= "form-control w-25">
        <button class="btn btn-primary mt-4">Login</button>
        </form>
      </div>
        <div>
          <p class="mt-4">Not Registerd? <a href="/api/users/register">Click here </a>to register</p>
        </div>
    </div>
  </div>
</body>
