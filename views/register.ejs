  <title>Resource Wall Register</title>
</head>

<body>
  <%- include('./partials/_header.ejs') %>
  <div class="container pt-4">
    <div>
      <form action="/api/users/" method="POST">
        <label for="email">Email Adress:</label>
          <input type='email' id="email" name="email" placeholder="Enter email" style="width: 500px; margin: 1em ">
    </div>
    <div>
      <label for="password">Password:</label>
        <input type='password' id="password" name="password" placeholder="Password" style="width: 500px;margin: 1em">
        <input style="color: rgb(32, 32, 38)" type="submit" value="Register">
    </div>
    <div>
      <p>Already Registerd? <a href="/api/users/login">Click here</a> to login.</p>
    </div>
  </div>
    <!-- Bootstrap JS -->
