<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand ms-4" style="font-size:25px;" href="/">Resource Wall</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse d-flex justify-content-end mx-2" id="navbarNavAltMarkup">

      <div class="navbar-nav"></div>
        <% if(locals.user){ %>
          <form action="/login" method="POST">
            <div class="text">Logged In As: <%=users.email%>
                <button type="submit" class="btn btn-primary">Logout</button>
          </form>
          <form action="/api/users/resources" method="GET">
            <div class="text">search: <%=user.resources%>
                <button type="submit" class="btn btn-primary">My Resources</button>
          </form>
          <form action="/search" method="POST">
            <div class="text">search: <%=user.resources%>
                <button type="submit" class="btn btn-primary">Search</button>
          </form>
          <% } else{ %>
            <form action="/api/users" method="GET">
              <button type="submit" class="btn btn-light mx-2">Login</button>
            </form>
            <form method="GET" action="/api/users/register">
              <button type="submit" class="btn btn-light">Register</button>
            </form>
            <% } %>
      </div>
    </div>
  </nav>
</header>
